<odoo>
    <data>
        <template id="report_invoice_document_inherited" inherit_id="account.report_invoice_document">
            <xpath expr="//div/div[1]/div[1]/div[3]" position="before">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.concerned_person_id" name="concerne_person">
                    <strong>Concerned Person:</strong>
                    <p class="m-0" t-field="o.concerned_person_id"/>
                </div>
            </xpath>
            <xpath expr="//table/thead/tr/th[@name='th_description']" position="before">
                <th name="th_sl_no">
                    <span>Sl No.</span>
                </th>
            </xpath>
            <xpath expr="//table/tbody/t[@t-foreach='lines']" position="before">
                <t t-set="sl_no" t-value="1"/>
            </xpath>
             <xpath expr="//table/tbody/t[@t-foreach='lines']" position="inside">
                <t t-set="sl_no" t-value="sl_no+1"/>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='lines']/tr/t//td[@name='account_invoice_line_name']" position="before">
                <td name="account_sl_no">
                    <span t-esc="sl_no"/>
                </td>
            </xpath>

            <xpath expr="//div[@id='total']" position="after">
                <table width="100%" style="margin-top:130px;border-style:hidden;">
                    <tr>
                        <td style="float:left;width:25%;text-align:center;">
                            <b>Prepared By :
                                <span t-field="o.user_id"/>
                            </b>
                        </td>
                        <td style="float:right;width:200px;text-align:center;border-top: 2px solid black;border-bottom: hidden;border-right: hidden;border-left:hidden;background-color:white">
                            <b>Signature</b>
                        </td>
                    </tr>
                </table>
            </xpath>

        </template>
    </data>
</odoo>
