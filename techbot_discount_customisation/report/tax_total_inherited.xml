<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <template id="document_tax_totals_inherited" inherit_id="account.document_tax_totals">
        <xpath expr="//tr[@class='border-black o_total']" position="replace">
            <t t-if="sub_total_amount">
            <tr class="border-black o_total">
                <t t-if="has_rounding">
                    <td>Total</td>
                </t>
                <t t-else="">
                    <td>
                        <strong>Total</strong>
                    </td>
                    <td class="text-end">
                        <span t-esc='sub_total_amount'/>
                    </td>
                </t>
            </tr>
            </t>
            <t t-if="discount_total">
            <tr class="border-black o_total">
                <t t-if="has_rounding">
                    <td>Discount</td>
                </t>
                <t t-else="">
                    <td>
                        <strong>Discount</strong>
                    </td>
                    <td class="text-end">
                        <span t-esc="discount_total * -1"/>
                    </td>
                </t>
            </tr>
            </t>
            <tr class="border-black o_total">
                <t t-if="has_rounding">
                    <td>Grand Total</td>
                </t>
                <t t-else="">
                    <td>
                        <strong>Grand Total</strong>
                    </td>
                    <td class="text-end">
                        <span t-esc="tax_totals['formatted_amount_total']"/>
                    </td>
                </t>
            </tr>
        </xpath>
    </template>

</odoo>