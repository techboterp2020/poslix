<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_warranty_tree_view" model="ir.ui.view">
        <field name="name">product.warranty.tree</field>
        <field name="model">product.warranty</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="order_no"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="product_warranty_form_view" model="ir.ui.view">
        <field name="name">product.warranty.form</field>
        <field name="model">product.warranty</field>
        <field name="arch" type="xml">
            <form string="Product Warranty">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id"/>
                            <field name="customer"/>
                            <field name="order_no"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_warranty_action" model="ir.actions.act_window">
        <field name="name">Products Warranty</field>
        <field name="res_model">product.warranty</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_warranty_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Product Warranty!
            </p>
        </field>
    </record>

    <menuitem
            action="product_warranty_action"
            id="menu_product_warranty_action"
            parent="stock.menu_stock_root"
            sequence="20"
    />


</odoo>