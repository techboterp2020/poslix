<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit_sale" model="ir.ui.view">
    <field name="name">sale.order.form.inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/tree/field[@name='tax_id']" position="after">
            <field name="warranty" attrs="{'invisible': [('product_type', '!=', 'product')]}" />
            <field name="warranty_end_date" attrs="{'required': [('warranty','=',True)],'invisible': [('warranty','!=',True)],'readonly': [('product_updatable','=',False)]}"/>
        </xpath>
    </field>
</record>
</odoo>