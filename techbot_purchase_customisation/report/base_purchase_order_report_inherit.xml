<odoo>
    <data>
        <template id="report_purchase_order_document_inherited" inherit_id="purchase.report_purchaseorder_document">

            <xpath expr="//div[1]/table/thead/tr/th[@name='th_description']" position="before">
                <th name="th_sl_no">
                    <strong>Sl No.</strong>
                </th>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']" position="before">
                <t t-set="sl_no" t-value="1"/>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']" position="inside">
                <t t-if="not line.product_id.discount_product">
                <t t-set="sl_no" t-value="sl_no+1"/>
                </t>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']/tr/t/td[@id='product']" position="before">
                <td name="account_sl_no">
                    <span t-esc="sl_no"/>
                </td>
            </xpath>

            <xpath expr="//div[@id='total']" position="after">
                               <div  class="col-12" style="padding-top:150px;" >
                <table width="100%" style="border-style:hidden;">
                    <tr>
                        <td style="float:left;width:200px;text-align:center;border-top: 1px dotted black;border-bottom: hidden;border-right: hidden;border-left:hidden;background-color:white;font-size:12px">
                            Receiver's Signature
                        </td>
                        <td style="float:right;width:75%;text-align:center;border: hidden;font-size:12px;padding-left:240px">
                            For
                                <span t-field="o.company_id"/>
                        </td>
                    </tr>
                </table>
                </div>

            </xpath>
        </template>
    </data>
</odoo>