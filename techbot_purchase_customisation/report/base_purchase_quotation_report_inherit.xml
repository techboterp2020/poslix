<odoo>
    <data>
        <template id="report_purchase_quotation_document_inherited"
                  inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//div[1]/table/thead/tr/th[@name='th_description']" position="before">
                <th name="th_sl_no">
                    <strong>Sl No.</strong>
                </th>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']" position="before">
                <t t-set="sl_no" t-value="1"/>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']" position="inside">
                <t t-set="sl_no" t-value="sl_no+1"/>
            </xpath>

            <xpath expr="//table/tbody/t[@t-foreach='o.order_line']/tr/t/td[@id='product']" position="before">
                <td name="account_sl_no">
                    <span t-esc="sl_no"/>
                </td>
            </xpath>

            <xpath expr="//table[@class='table table-sm mt-4']" position="after">
                <table width="100%" style="margin-top:130px;border-style:hidden;">
                    <tr>
                        <td style="float:left;width:25%;text-align:center;">
                            <b>Prepared By :
                                <span t-field="o.user_id"/>
                            </b>
                        </td>
                        <td style="float:right;width:200px;text-align:center;border-top: 2px solid black;border-bottom: hidden;border-right: hidden;border-left:hidden;background-color:white">
                            <b>Signature</b>
                        </td>
                    </tr>
                </table>
            </xpath>
        </template>
    </data>
</odoo>
