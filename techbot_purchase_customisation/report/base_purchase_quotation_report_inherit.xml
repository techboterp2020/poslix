<odoo>
    <data>
        <template id="report_purchase_quotation_document_inherited"
                  inherit_id="purchase.report_purchasequotation_document">
            <xpath expr="//div[1]/table[@class='table table-sm mt-4']" position="replace">
                <table class="table table-sm mt-4">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_sl_no">
                                <strong>Sl No.</strong>
                            </th>
                            <th name="th_description">
                                <strong>Description</strong>
                            </th>
                            <th name="th_expected_date" class="text-center">
                                <strong>Expected Date</strong>
                            </th>
                            <th name="th_quantity" class="text-end">
                                <strong>Qty</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        <t t-set="sl_no" t-value="0"/>

                        <t t-foreach="o.order_line" t-as="order_line">

                            <t t-set="sl_no" t-value="sl_no + 1"/>


                            <tr t-att-class="'bg-200 fw-bold o_line_section' if order_line.display_type == 'line_section' else 'fst-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                                <t t-if="not order_line.display_type">
                                    <td id="slno">
                                        <span t-esc="sl_no"/>
                                    </td>
                                    <td id="product">
                                        <span t-field="order_line.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="order_line.date_planned"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="order_line.product_qty"/>
                                        <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="99" id="section">
                                        <span t-field="order_line.name"/>
                                    </td>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </xpath>
            <xpath expr="//table[@class='table table-sm mt-4']" position="after">
                <table width="100%"  style="margin-top:130px;border-style:hidden;">
                <tr >
                    <td style="float:left;width:25%;text-align:center;">
                        <b>Prepared By :  <span t-field="o.user_id"/></b>
                    </td>
                    <td style="float:right;width:200px;text-align:center;border-top: 2px solid black;border-bottom: hidden;border-right: hidden;border-left:hidden ;">
                        <b>Signature</b>
                    </td>
                </tr>
            </table>
            </xpath>
        </template>
    </data>
</odoo>